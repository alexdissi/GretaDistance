        {{ form_widget(form.start, {'attr': {'id': 'calendar_start', 'class': 'input mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', 'placeholder': 'Start'}}) }}
